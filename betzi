<body>
  <button onclick="sendRequest('vorwaerts')">Vorwärts</button>
  <button onclick="sendRequest('rueckwaerts')">Rückwärts</button>
  <button onclick="sendRequest('links')">Links</button>
  <button onclick="sendRequest('rechts')">Rechts</button>
  <button onclick="sendRequest('an')">An</button>
  <button onclick="sendRequest('aus')">Aus</button>

  <script>
    function sendRequest(endpoint) {
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/api/' + endpoint, true);
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4 && xhr.status === 200) {
          // Request successful, do something with the response if needed
          console.log('Request sent successfully');
        }
      };
      xhr.send();
    }
  </script>
</body>
